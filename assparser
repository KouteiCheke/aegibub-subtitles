<?php

declare(strict_types=1);

use Aegisub\Parser;

if (PHP_SAPI) {
    require __DIR__.'/vendor/autoload.php';

    $arguments = getopt('f:bac', ['file:']);

    $filename = $arguments['file'] ?? $arguments['f'] ?? '';

    unset($arguments['file'], $arguments['f']);

    (new Parser())->make($filename, $arguments);
}
